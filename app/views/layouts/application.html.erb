<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <style>
    .icon {
      font-size: 50px;
      margin: 10px;
    }
    .all_icons {
      display: flex;
      justify-content: center;
    }
    </style>
  </head>

  <body>

    <nav class="navbar navbar-default hidden-xs" id ="topnav">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">
            <span class="glyphicon glyphicon-fire "></span>
          </a>
        </div>

        <ul class = "nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <span>
                <%=link_to "#{current_user.full_name}", edit_user_path(current_user)%>
             </span>
            <%= link_to 'Sign Out', sessions_path, method: :delete %>
            <%= link_to 'Change password', edit_password_user_path(current_user)%>
          <%else%>
            <%= link_to new_user_path('Sign Up'), class: 'list-group-item' do %>
              <span class="glyphicon glyphicon-user">Sign Up</span>
            <% end %>

            <%= link_to new_session_path('Login'), class: 'list-group-item' do %>
              <span class="glyphicon glyphicon-log-in">Login</span>
            <% end %>
          <%end%>

        </ul>




        <ul class="nav navbar-nav">
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>

        <form class="navbar-form navbar-right">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
              <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </div>
    </nav>


      <nav class="navbar navbar-default visible-xs" id ="topnav_drop">
        <div class="container-fluid">
          <div class="navbar-header">
            <button
              type="button"
              class="navbar-toggle collapsed"
              data-toggle="collapse"
              data-target="#nav-collapsible-section">
              <span class="glyphicon glyphicon-menu-hamburger">
            </button>

            <a class="navbar-brand" href="/">
              <span class="glyphicon glyphicon-fire"></span>
            </a>
          </div>

          <div class="navbar-collapse collapse" id="nav-collapsible-section">
            <form class="navbar-form navbar-right">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>

            <ul class="nav navbar-nav">
              <li><a href="/about">About</a></li>
              <li><a href="/contact">Contact</a></li>
            </ul>

            <ul class = "nav navbar-nav navbar-right">
              <%= link_to new_user_path('Sign Up'), class: 'list-group-item' do %>
                <span class="glyphicon glyphicon-user">Sign Up</span>
              <% end %>

              <%= link_to new_session_path('Login'), class: 'list-group-item' do %>
                <span class="glyphicon glyphicon-log-in">Login</span>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <%= notice || alert %>

    <%= yield %>
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6 all_icons">
        <i class="fa fa-envelope icon" aria-hidden="true"></i>
        <i class="fa fa-facebook icon" aria-hidden="true"></i>
        <i class="fa fa-instagram icon" aria-hidden="true"></i>
        <i class="fa fa-medium icon" aria-hidden="true"></i>
        <i class="fa fa-twitter icon" aria-hidden="true"></i>
      </div>
      <div class="col-sm-3"></div>
    </div>
  </body>
</html>
