

<div class = 'row'>
  <div class = 'col-sm-1'></div>
  <div class = 'col-sm-10'>
    <h1 class = "title"> Edit Post </h1>

    <% if @post.errors.any? %>
      <ul>
        <%@post.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
        <%end%>
      </ul>
    <%end%>
    <%= form_for @post do |f|%>
      <div class = "field form-group">
        <%= f.collection_select(:category_id, Category.all, :id, :name) %>
      </div>
      <div class="field form-group">
        <%= f.label :title, class: 'col-sm-1 control-label' %>
          <div class="col-sm-11">
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
      <div class = "field form-group ">
        <%= f.label :body, class: 'col-sm-1' %>
        <div class='col-sm-11'>
          <%= f.text_field :body, class: 'form-control body-area' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-1 offset-md-3">
          <%= f.submit class: 'btn'  %>
        </div>
      </div>
    <%end%>
  </div>
</div class = 'col-sm-1'></div>
</div>
